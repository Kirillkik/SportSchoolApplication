@model SportSchoolApplication.Models.FPRInFace

@{
    ViewBag.Title = "Федерация в лицах";
}

<h2>Федерация в лицах</h2>

<body>
    <div class="container">

        <div class="row">

            <div class="col-md-6 mb-2">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.FIO)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FIO)
                        <hr />
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Biography)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Biography)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6 mb-2">

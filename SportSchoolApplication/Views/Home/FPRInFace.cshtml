            </div>
        </div>
        <hr />
        <div class="row">

            <div class="col-md-12 mb-2">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Achivments)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Achivments)
                    </dd>

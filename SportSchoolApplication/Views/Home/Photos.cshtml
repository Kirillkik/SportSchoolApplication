@model List < SportSchoolApplication.Models.Photo>

@{
    ViewBag.Title = "Photos";
}

<h2>Фотографии</h2>

<body>
    <div class="container">

        @for (int i = 0; i <= Model.Count() / 3; i++)
        {
            <div class="row">
                @if (i < Model.Count())
                {
                <div class="col-md-4 mb-2">
                    <a href="~/Home/Photo/@Model[i].Id">
                        <img src="@Model[i].PhotoPath" width="300" height="300" />
                        </a>
                </div>
                }
                @if (i + 1 < Model.Count())
                {
                <div class="col-md-4 mb-2">
                    <a href="~/Home/Photo/@Model[i+1].Id">
                        <img src="@Model[i+1].PhotoPath" width="300" height="300" />
                        </a>
                </div>
                }
                @if (i + 2 < Model.Count())
                {
                <div class="col-md-4 mb-2">
                    <a href="~/Home/Photo/@Model[i+2].Id">
                        <img src="@Model[i+2].PhotoPath" width="300" height="300" />
                        </a>
                </div>
                }
            </div>
            <br />
        }

    </div>


</body>
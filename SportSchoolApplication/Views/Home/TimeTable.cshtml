@model IEnumerable<SportSchoolApplication.Models.TimeTable>

@{
    ViewBag.Title = "TimeTable";
    List<SportSchoolApplication.Models.ApplicationUser> coaches = ViewBag.CoachList;
}

<h2>TimeTable</h2>

<div class="form-group">
    <label class="control-label col-md-2">Пол</label>
    <div class="col-md-10">
        <select class="form-control" id="CoachId" name="CoachId">
            <option value="0">--не-выбрано--</option>
            @foreach (var item in coaches)
            {
                <option value="@item.Id">@item.UserName</option>
            }
        </select>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Coach.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayOfWeek.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gym.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time_From)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="TimeTable" name="TimeTable" class="d-none">
            <td>
                @Html.DisplayFor(modelItem => item.Coach.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfWeek.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gym.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time_From)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
        </tr>
    }

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $('#CoachId').on("change", function () {
        $('#TimeTable').addClass('d-none');
        $(`#CategoryId option[data-isMan="${$(this).val()}"]`).removeClass('d-none');
    });
</script>
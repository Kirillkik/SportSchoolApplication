@model IEnumerable<SportSchoolApplication.Models.Gallery>

@{
    ViewBag.Title = "Gallery";
    var Massiv = Model.ToList();
}

<h2>Gallery</h2>

<body>
    <div class="container">
        @for (int i = 0; i < Massiv.Count; i++)
        {
            <div class="row">
                <div class="col-md-4 mb-2">
                    <a href="~/Photos/Index/@i">
                        <h2>@Massiv[i].Name</h2>
                        <img src="@Massiv[i].PhotoPath" width="200" height="200" />
                    </a>
                </div>
            </div>
        }
    </div>
</body>

   